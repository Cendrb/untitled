<h2>Přihlášení</h2>
<div class="login">
  <%= form_tag action: :create do %>

      <div class="field">
        <%= label_tag(:email, 'Email:') %>
        <%= text_field_tag :email, params[:email], class: 'form-control' %>
      </div>

      <div class="field">
        <%= label_tag(:password, 'Heslo:') %>
        <%= password_field_tag :password, params[:password], class: 'form-control' %>
      </div>

      <div class="field">
        <%= label_tag(:permanent, 'Trvalé přihlášení:') %>
        <%= check_box_tag :permanent, params[:permanent], class: 'form-control' %>
      </div>

      <div class="field">
        <%= submit_tag 'Přihlásit' %>
      </div>
      <p>
        <%= link_to 'Registrace', register_path %><br>
      </p>
  <% end %>
</div>
